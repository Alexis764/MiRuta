<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".perfil">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="540dp"
            android:layout_marginTop="57dp"
            android:layout_marginEnd="90dp"
            android:layout_marginBottom="91dp"
            android:elevation="30dp"
            android:paddingBottom="20dp"
            app:cardBackgroundColor="#FF000000">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/titulo2"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:background="@color/black"
                    android:gravity="center"
                    android:text="@string/perfil"
                    android:textColor="@color/white"
                    android:textSize="35sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/tiltneon"/>

                <ImageView
                    android:id="@+id/tvImagen"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:src="@drawable/avatar"></ImageView>

                <TextView
                    android:id="@+id/texto1"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:background="@color/black"
                    android:gravity="center"
                    android:text="@string/texto1"
                    android:textColor="@color/white"
                    android:textSize="25dp"
                    android:fontFamily="@font/tiltneon"/>

                <TextView
                    android:id="@+id/texto2"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:background="@color/black"
                    android:gravity="center"
                    android:text="@string/texto2"
                    android:textColor="@color/white"
                    android:textSize="25dp"
                    android:fontFamily="@font/tiltneon" />


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:layout_marginTop="80dp">

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="1dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:src="@drawable/encendido">

                    </ImageView>

                    <TextView
                        android:id="@+id/texto3"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:background="@color/black"
                        android:gravity="center"
                        android:layout_marginTop="10px"
                        android:text="@string/cerrar"
                        android:textColor="@color/white"
                        android:textSize="25dp"
                        android:textStyle="bold"
                        android:fontFamily="@font/tiltneon">
                    </TextView>

                </LinearLayout>

            </LinearLayout>



        </androidx.cardview.widget.CardView>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>