<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".perfil">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black">

            <Toolbar
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">



                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <ImageButton
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:backgroundTint="#00FFFFFF"
                            tools:src="@drawable/iconomenuhamburguesa"
                            android:layout_gravity="center">
                        </ImageButton>
                    </LinearLayout>



                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Mi Ruta"
                            android:textColor="@color/white"
                            android:gravity="center">
                        </TextView>
                    </LinearLayout>



                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <ImageButton
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:backgroundTint="#00FFFFFF"
                            tools:src="@drawable/iconohistorial"
                            android:layout_gravity="center">
                        </ImageButton>
                    </LinearLayout>



                </LinearLayout>
            </Toolbar>

        </com.google.android.material.appbar.AppBarLayout>


        <androidx.cardview.widget.CardView
            app:cardCornerRadius="30dp"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:layout_margin="50dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="@color/black"
            android:elevation="30dp"
            android:paddingBottom="20dp">

            <TextView
                android:id="@+id/titulo2"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@color/azul"
                android:gravity="center"
                android:text="@string/titulo"
                android:textColor="@color/black"
                android:textSize="35sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/tvImagen"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_margin="120dp"
                android:src="@drawable/user"></ImageView>

            <TextView
                android:id="@+id/Nombre2"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:layout_gravity="bottom"
                android:layout_margin="20dp"
                android:background="@drawable/shape_categoria"
                android:padding="20dp"
                android:text="@string/texto2"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Trabajo2"
                android:layout_width="match_parent"
                android:layout_height="128dp"
                android:layout_gravity="bottom"
                android:layout_margin="20dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/shape_categoria"
                android:padding="20dp"
                android:text="@string/texto3"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Desc2"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_gravity="bottom"
                android:layout_margin="20dp"
                android:background="@drawable/shape_categoria"
                android:padding="10dp"
                android:text="@string/texto4"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold" />

        </androidx.cardview.widget.CardView>

    </RelativeLayout>


    </androidx.coordinatorlayout.widget.CoordinatorLayout>